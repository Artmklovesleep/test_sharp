<Page x:Class="test_sharp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test_sharp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="createButton" Content="Создать" Width="100" Height="50" Margin="0,10,0,10" Click="CreateButtonClick"/>
            <Button x:Name="openButton" Content="Открыть " Width="100" Height="50" Margin="0,10,0,10" Click="OpenButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
